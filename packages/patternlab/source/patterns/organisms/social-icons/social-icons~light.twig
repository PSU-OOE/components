{% set social_medias = {
  instagram: 'Instagram',
  facebook: 'Facebook',
  linkedin: 'LinkedIn',
  twitter: 'Twitter',
  youtube: 'YouTube',
  flickr: 'Flickr',
  pinterest: 'Pinterest',
  blog: 'Blog',
} %}

{% set social_icons = [] %}
{% for icon, label in social_medias %}
  {% set social_icon %}
    {% include '@molecules/social-icon/social-icon.twig' with {
      color: 'light',
      icon: icon,
      label: label,
      url: '#',
    } only %}
  {% endset %}
  {% set social_icons = social_icons|merge([social_icon]) %}
{% endfor %}

<div style="padding: 1rem;background:#1e407c">
  {% include '@organisms/social-icons/social-icons.twig' with { social_icons: social_icons } only %}
</div>
