{% set primary_content %}
<div style="display: flex;align-items: center; flex-flow: row nowrap">
    <a href="/" title="Home" tabindex="-1" style="margin-right: 2rem">Home Link</a>
    <span>The name of the program</span>
    <span style="margin-left: auto">Call to action buttons</span>
</div>
{% endset %}

{% set secondary_content %}
    <div style="display: flex;align-items: center; flex-flow: row nowrap">
        <span>Primary tabs go here</span>
        <span style="margin-left: auto">More menu</span>
    </div>
{% endset %}

{% set primary_band %}
    {% include '@molecules/band/band.twig' with {
        content: primary_content,
        padding: 'small'
    } only %}
{% endset %}

{% set secondary_band %}
    {% include '@molecules/band/band.twig' with {
        content: secondary_content,
        secondary: true,
        padding: 'small'
    } only %}
{% endset %}

<div style="height: 200rem">
  {% include '@organisms/sticky-panel/sticky-panel.twig' with {
      bands: [primary_band, secondary_band]
  } only %}
</div>
