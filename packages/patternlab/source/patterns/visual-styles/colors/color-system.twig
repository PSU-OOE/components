{%
    set colors = {
    'primary blue': '#0064bf',
    'beaver blue': '#1e407c',
    'nittany navy': '#001e44',
    'true blue': '#0056ae',
    'pugh-blue': '#96bee6',
    'light mauve': '#ebecf4',
    'light grey': '#f2f3f9',
    'medium grey': '#d8dbea',
    'medium dark grey': '#687a8d',
    'slate': '#314d64',
    'slate light': '#ccdae6',
    'keystone': '#ffd100',
    'invent orange': '#e98300',
    'invent orange light': '#fca917',
}
%}

<p>The color foundation of Penn State Outreach and Online Education, based on Penn State branding guidelines.</p>
<ul class="grid grid--three-col">
  {% for name,value in colors %}
    <li class="grid__item">
      <div style="text-align:center">
        <span style="display:block;aspect-ratio:4;border-radius: .5rem; background: {{ value }};"></span>
        <span style="font-size: 90%;line-height: 1;">{{ name }} ({{ value }})</span>
      </div>
    </li>
  {% endfor %}
</ul>
