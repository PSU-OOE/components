    </div>
  {% endset %}
  {% include '@molecules/background-container/background-container.twig' with {
    color: 'white',
    content: page_content,
  } only %}

  {% set tile_nav_content %}
    <div class="basic-page-content" style="margin: auto;display: flex; flex-direction: column; max-width: 119rem;">
      {% set tile %}
        {% include '@organisms/navigation-tile/description-navigation-tile.twig' with {
          link: {
            url: '#',
            label: 'Navigation Title',
          },
          description: "The Office of the Vice Provost for Online Education is led by Dr. Renata S. Engel and is responsible for all aspects of Penn State World Campus.",
        } only %}

      {% endset %}
      {% set tile2 %}
        {% include '@organisms/navigation-tile/description-navigation-tile.twig' with {
          link: {
            url: '#',
            label: 'Navigation Title with a really long title that will go to two lines eventually',
          },
          description: "The Office of the Vice Provost for Online Education is led by Dr. Renata S. Engel and is responsible for all aspects of Penn State World Campus.",
        } only %}
      {% endset %}
      {% include '@molecules/grid/grid.twig' with {
        items: [tile, tile2, tile],
      } only %}
    </div>
  {% endset %}
  {% include '@molecules/background-container/background-container.twig' with {
    color: 'light-grey',
    background_image: 'hub-geometric:topright',
    content: tile_nav_content,
  } only %}
  {% set overlay_content %}
    {% set headshot %}
      <img src="https://test.worldcampus.psu.edu/sites/default/files/2020-08/Carrie-Tilley-quote.jpg" width="400" height="400" alt="carrie tilley and family" loading="lazy">
    {% endset %}
    {% include '@organisms/quote/quote.twig' with {
      headshot: headshot,
      reverse: true,
      quote: "Being able to work with Penn State World Campus and find not only a degree program I was interested in, but knowing that I had that flexibility made it work perfectly for us.",
      attribution: "Carrie Tilley",
      byline: "Master of Engineering in Systems Engineering graduate",
      after_quote: ""
    } %}
  {% endset %}
  {% set overlay_image %}
    <picture class="responsive-image responsive-image--feature-banner">
      <source srcset="https://test.worldcampus.psu.edu/sites/default/files/styles/feature_banner_16_7_xl/public/2021-12/quote-background-entry-gates-snow.jpg.webp?itok=8J4_R3Oq 1x" media="(min-width:800px)" type="image/webp" width="1920" height="840">
      <source srcset="https://test.worldcampus.psu.edu/sites/default/files/styles/feature_banner_16_9_m/public/2021-12/quote-background-entry-gates-snow.jpg.webp?itok=GOfpUKe2 1x" type="image/webp" width="950" height="534">
      <img src="https://test.worldcampus.psu.edu/sites/default/files/2021-12/quote-background-entry-gates-snow.jpg?itok=8J4_R3Oq" width="1920" height="840" alt="Snowy sidewalk at Penn State's University Park campus" loading="lazy">
    </picture>
  {% endset %}

  {% include '@molecules/overlay/overlay.twig' with {
    image: overlay_image,
    content: overlay_content,
    overlay_bg_color: "blue-gradient",
    column_width: "normal",
    overlay_width: "wide"
  } %}
</main>
{% set footer_top %}
  <div class="basic-page-content" style="max-width: 119rem;margin:auto;display:flex;min-height:25rem;">
    Footer top content
  </div>
{% endset %}
{% set footer_bottom %}
  <div class="basic-page-content" style="color:#fff;max-width: 119rem;margin:auto;display:flex;min-height:12rem;">
    Footer bottom content
  </div>
{% endset %}
<footer>
  {% include '@molecules/background-container/background-container.twig' with {
    color: 'light-grey',
    background_image: 'hub-geometric:topleft',
    content: footer_top,
  } only %}
  {% include '@molecules/background-container/background-container.twig' with {
    color: 'beaver-blue',
    background_image: 'hub-geometric:bottomright',
    content: footer_bottom,
  } only %}
</footer>

