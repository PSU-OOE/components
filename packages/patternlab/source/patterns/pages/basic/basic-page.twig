      <div style="flex: 1 1 0;min-width: 28rem;">
        {% include '@organisms/quote/quote.twig' with {
          headshot: "<img src=\"https://test.worldcampus.psu.edu/sites/default/files/2020-08/Carrie-Tilley-quote.jpg\" width=\"400\" height=\"400\" alt=\"carrie tilley and family\">",
