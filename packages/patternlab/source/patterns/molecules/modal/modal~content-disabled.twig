{% set content = 'Lorem ipsum dolor sit amet. <button disabled>Disabled Button</a>' %}


<button id="modal-trigger-disabled" class="modal__trigger">Click me to open the modal</button>

{% include '@psu-ooe/modal/modal.twig' with {
  content: content,
  id: 'modal-disabled'
} only %}

<script>
  (() => {
      const modal = document.getElementById('modal-disabled');
      const trigger = document.getElementById('modal-trigger-disabled');
      // Showing modal when clicking triggering element and moving focus to modal container
      trigger.addEventListener("click", (e) => {
          modal.dispatchEvent(new CustomEvent('component:activate', {
              detail: {
                  modal_trigger: trigger,
              }
          }));
      });
  })();
</script>

