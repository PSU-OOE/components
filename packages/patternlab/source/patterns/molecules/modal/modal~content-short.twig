{% set content = 'Lorem ipsum dolor sit amet. <a href="#">Link to something</a>' %}

<button id="modal-trigger-short" class="modal__trigger">Click me to open the modal</button>

{% include '@psu-ooe/modal/modal.twig' with {
  content: content,
  id: 'modal-short'
} only %}

<script>
  (() => {
      const modal = document.getElementById('modal-short');
      const trigger = document.getElementById('modal-trigger-short');
      // Showing modal when clicking triggering element and moving focus to modal container
      trigger.addEventListener("click", (e) => {
          modal.dispatchEvent(new CustomEvent('component:activate', {
              detail: {
                  modal_trigger: trigger,
              }
          }));
      });
  })();
</script>
