{% set title = 'Modal Title' %}

<button id="modal-trigger" class="modal__trigger">Click me to open the modal</button>

{% include '@molecules/modal/modal.twig' with {
  content: content,
  id: 'modal',
  title: title
} only %}

<script>
  (() => {
      const modal = document.getElementById('modal');
      const trigger = document.getElementById('modal-trigger');
      // Showing modal when clicking triggering element and moving focus to modal container
      trigger.addEventListener("click", (e) => {
          modal.dispatchEvent(new CustomEvent('component:activate', {
              detail: {
                  modal_trigger: trigger,
              }
          }));
      });
  })();
</script>
