{% set content %}
  <h2 class="heading heading--neutral">Select <span class="text--contrasting">Modal Heading</span></h2>
  {% include '@psu-ooe/button/button.twig' with { label: 'Clear Fruit' } only %}
  <select class="program-selector__programs-list-fallback form-select"><option value="">Select your favorite fruit</option><option value="banana">Banana</option></select>
  <div class="program-selector__recent-programs"></div>
  {% include '@psu-ooe/button/button.twig' with { label: 'Clear Fruit' } only %}
{% endset %}

<button id="modal-trigger-hidden" class="modal__trigger">Click me to open the modal</button>

{% include '@psu-ooe/modal/modal.twig' with {
  content: content,
  id: 'modal-hidden'
} only %}

<script>
  (() => {
      const modal = document.getElementById('modal-hidden');
      const trigger = document.getElementById('modal-trigger-hidden');
      // Showing modal when clicking triggering element and moving focus to modal container
      trigger.addEventListener("click", (e) => {
          modal.dispatchEvent(new CustomEvent('component:activate', {
              detail: {
                  modal_trigger: trigger,
              }
          }));
      });
  })();
</script>

<style>
  #modal-hidden .button {
    display: none;
  }
</style>
