{% set content = 'Lorem ipsum dolor sit amet. <a style="display: none;" href="#">Link to something</a>' %}


<button id="modal-trigger-hidden" class="modal__trigger">Click me to open the modal</button>

{% include '@molecules/modal/modal.twig' with {
  content: content,
  id: 'modal-hidden'
} only %}

<script>
  (() => {
      const modal = document.getElementById('modal-hidden');
      const trigger = document.getElementById('modal-trigger-hidden');
      // Showing modal when clicking triggering element and moving focus to modal container
      trigger.addEventListener("click", (e) => {
          modal.dispatchEvent(new CustomEvent('component:activate', {
              detail: {
                  modal_trigger: trigger,
              }
          }));
      });
  })();
</script>

