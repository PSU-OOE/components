{% set drop_button %}
  <style>
      @keyframes backandforth {0%{left:15%;} 100%{left:85%;}}
  </style>
  <div style="position:relative;height:10rem;">
    <div style="position:absolute;animation-timing-function: linear;animation-name: backandforth; animation-direction:alternate;animation-iteration-count: infinite;animation-duration:5s;">
      {% include '@molecules/drop-button/drop-button.twig' with {
        toggle_content: '<span style="outline: 2px dotted black">See example where<br>the content panel may<br>shake violently</span>',
        panel_content: 'Test content',
      } only %}
    </div>
  </div>
{% endset %}

  {% include '@organisms/alert/alert.twig' with {
    content: "This example may potentially trigger seizures for people with photosensitive epilepsy! This example exists to illuminate the inherent limitations of the drop-button component javascript positioning system. Use of the component in this manner is not recommended and may carry legal consequences.<br><br><strong>Do not</strong> activate this example unless it is safe to do so in your surroundings.",
    severity: "error"
  } only %}
  {% include '@organisms/expandable-section/expandable-section.twig' with {
    id: 'drop-button-warning-expandable-content',
    intro: warning,
    expand_label: "Expand example",
    content: drop_button,
    collapse_label: "Close example"
  } only %}
