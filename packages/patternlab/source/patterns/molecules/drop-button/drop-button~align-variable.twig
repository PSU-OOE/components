{% set menu %}
  <div id="drop-button-align-variable" style="padding: 4rem 0;position: relative;margin-left:45%;transition: margin-left 5s linear;">
    {% include '@molecules/drop-button/drop-button.twig' with {
      toggle_content: '<span style="outline: 2px dotted black"><span class="visually-hidden">4</span> More <span class="visually-hidden">options</span></span>',
      panel_content: 'Test content',
    } only %}
  </div>
{% endset %}
{% include '@molecules/callout/callout.twig' with {
  content: menu,
} only %}
<script>
    (() => {
      const example = document.querySelector('#drop-button-align-variable');
      setInterval(() => {
        if (example.style.marginLeft === '45%') {
          example.style.marginLeft = '55%';
        }
        else {
          example.style.marginLeft = '45%';
        }
      }, 5000);
    })();
</script>
