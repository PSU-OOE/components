{% set unbound_short_content %}
    <div style="max-width:111rem;margin:auto;">
      {{ short_content }}
    </div>
{% endset %}
{% set unbound_tall_content %}
    <div style="max-width:111rem;margin:auto;">
      {{ tall_content }}
    </div>
{% endset %}
{% set unbound_short_narrow_content %}
    <div style="max-width:87rem;margin:auto;">
      {{ short_content }}
    </div>
{% endset %}
{% set unbound_tall_narrow_content %}
    <div style="max-width:87rem;margin:auto;">
      {{ tall_content }}
    </div>
{% endset %}
<style>.bg--primary-blue h3, .bg--primary-blue p { color: #fff !important; }</style>
{% set colors = ['light-grey','primary-blue'] %}
{% set backgrounds = ['shield--left', 'shield--right', 'shield--right-bottom-corner', 'shield--topleft-bottomright', 'shield--program-page-banner-top', 'shield--program-page-at-a-glance'] %}
{% for color in colors %}
    {% for background in backgrounds %}
      	<h2>{{ color }} {{ background }} (Full Width Background)</h2>
          {% include '@molecules/background-container/background-container.twig' with {
              color: color,
              background_image: background,
              content: unbound_short_content
          } only %}
          <br />
          <br />
          {% include '@molecules/background-container/background-container.twig' with {
              color: color,
              background_image: background,
              content: unbound_tall_content
          } only %}
          <br />
          <br />
          {% include '@molecules/background-container/background-container.twig' with {
              color: color,
              background_image: background,
              width: 'narrow',
              content: unbound_short_narrow_content
          } only %}
          <br />
          <br />
          {% include '@molecules/background-container/background-container.twig' with {
              color: color,
              background_image: background,
              width: 'narrow',
              content: unbound_tall_narrow_content
          } only %}
          <br />
          <br />
    {% endfor %}
{% endfor %}

