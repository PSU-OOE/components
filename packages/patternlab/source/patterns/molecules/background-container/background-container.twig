{% set unbound_short_content %}
    <div style="max-width:111rem;margin:auto;">
      {{ short_content }}
    </div>
{% endset %}
{% set unbound_tall_content %}
    <div style="max-width:111rem;margin:auto;">
      {{ tall_content }}
    </div>
{% endset %}
{% set unbound_short_narrow_content %}
    <div style="max-width:87rem;margin:auto;">
      {{ short_content }}
    </div>
{% endset %}
{% set unbound_tall_narrow_content %}
    <div style="max-width:87rem;margin:auto;">
      {{ tall_content }}
    </div>
{% endset %}

{% set colors = ['light-grey'] %}
{% set sprites = ['shield'] %}
{% set positions = ['left', 'right'] %}
{% for color in colors %}
    {% for sprite in sprites %}
      {% for position in positions %}
          {% include '@molecules/background-container/background-container.twig' with {
              color: color,
              sprite: sprite,
              position: position,
              content: unbound_short_content
          } only %}
          <br />
          <br />
          {% include '@molecules/background-container/background-container.twig' with {
              color: color,
              sprite: sprite,
              position: position,
              content: unbound_tall_content
          } only %}
          <br />
          <br />
          {% include '@molecules/background-container/background-container.twig' with {
              color: color,
              sprite: sprite,
              position: position,
              width: 'narrow',
              content: unbound_short_narrow_content
          } only %}
          <br />
          <br />
          {% include '@molecules/background-container/background-container.twig' with {
              color: color,
              sprite: sprite,
              position: position,
              width: 'narrow',
              content: unbound_tall_narrow_content
          } only %}
          <br />
          <br />
      {% endfor %}
    {% endfor %}
{% endfor %}

