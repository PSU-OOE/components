{% embed '@regions/header/header.twig' %}

  {% set how_to_apply %}
    {% include '@atoms/cta/cta-block.twig' with {
      label: 'How to Apply',
      url: '#',
      color: 'light-blue',
      compact: true,
    } only %}{% endset %}
  {% set request_info %}
    {% include '@atoms/cta/cta-block.twig' with {
      label: 'Request Info',
      url: '#',
      color: 'reversed',
      compact: true,
    } only %}
  {% endset %}

  {% block dogear_content %}
    <div class="region region--header-branding">
      <a class="branding-block" href="/">
        {% include '@molecules/sprite/sprite.twig' with { name: 'wc-mark' } only %}
        <span class="visually-hidden">Penn State World Campus</span>
      </a>
    </div>  {% endblock %}
  {% block content %}
    <div class="region--header-small-content">
    </div>
    <div class="region--header-large-content">
      <div class="region--header-large-cta">
        {% include '@atoms/cta/cta-group.twig' with {
          ctas: [how_to_apply, request_info],
          expand_to_fit: true,
        } only %}
      </div>
    </div>
  {% endblock %}
  {% block overflow %}
    <div class="region--header-small-overflow">
      {% include '@atoms/cta/cta-group.twig' with {
        ctas: [how_to_apply, request_info],
        expand_to_fit: true,
      } only %}
    </div>
    <div class="region--header-large-overflow"></div>
  {% endblock %}
{% endembed %}
