<div class="tabs">
  {% if intro %}
    <div class="tabs__intro">
      {{ intro }}
    </div>
  {% endif %}
  <div class="tabs__list" role="tablist">
    {% for tab in tabs %}
      <button class="tabs__button" type="button" role="tab" aria-selected="{{ loop.first ? 'true' : 'false' }}" aria-controls="{{ tab.id }}" tabindex="{{ loop.first ? '0' : '-1' }}" id="{{ (region.id ~ '-button') }}">{{ tab.title }}</button>
    {% endfor %}
  </div>
  {% for tab in tabs %}
      {% set panel_classes = ['tabs__panel'] %}
      {% if loop.first %}
        {% set panel_classes = panel_classes|merge(['tabs__panel--active']) %}
      {% endif %}
      <div class="{{ panel_classes|join(' ') }}" id="{{ tab.id }}" role="tabpanel" tabindex="0" aria-labelledby="{{ tab.id ~ '-button' }}">
        {{ tab.content }}
      </div>
    {% endfor %}
</div>
