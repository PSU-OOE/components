{% set classes = ['band'] %}
{% if padding %}
    {% set classes = classes|merge(['band--padding-' ~ padding]) %}
{% endif %}
{% if background %}
  {% set classes = classes|merge(['band--' ~ background]) %}
{% endif %}
<div class="{{ classes|join(' ') }}">
  {% if background == 'hub-geometric' %}
    <div class="band__geometrics">
      <svg width="0" height="0" style="position:absolute">
        <defs>
          <linearGradient id="hub-geometric-band-gradient" x1=".182" x2=".174" y1=".579" y2=".706" gradientUnits="objectBoundingBox">
            <stop offset="0" stop-color="var(--sky-blue)"/>
            <stop offset="1" stop-color="var(--sky-blue)" stop-opacity="0"/>
          </linearGradient>
        </defs>
      </svg>
      {% include '@atoms/sprite/sprite.twig' with { name: 'hub-geometric' } only %}
      {% include '@atoms/sprite/sprite.twig' with { name: 'hub-geometric' } only %}
    </div>
  {% endif %}
  <div class="band__content">
    {{ content }}
  </div>
</div>
