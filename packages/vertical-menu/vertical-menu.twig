{% macro menu_links(items, menu_level, id, density, highlight_active_trail) %}
  {% apply spaceless %}
    {% if items %}
      <ul class="vertical-menu__menu vertical-menu__menu--{{ menu_level }}" id="{{ id }}"{% if menu_level > 1 %} style="height:0;overflow:hidden;"{% endif %}>
        {% for item in items %}
          {% set item_classes = [
            'vertical-menu__item',
            'vertical-menu__item--' ~ menu_level,
            item.in_active_trail and highlight_active_trail ? 'vertical-menu__item--highlight',
          ] %}
          <li class="{{ item_classes|join(' ') }}">
            {% set link_classes = [
              'vertical-menu__link',
              'vertical-menu__link--' ~ menu_level,
              density ? 'vertical-menu__link--' ~ density,
              item.in_active_trail ? 'vertical-menu__link--active-trail',
            ]|filter(v => v is not empty)
            %}
            <a class="{{ link_classes|join(' ') }}" href="{{ item.url }}">{{ item.title }}</a>
            {% if item.below %}
              {% set id = (item.title ~ '-submenu')|clean_unique_id %}
              <button class="vertical-menu__toggle" aria-controls="{{ id }}" aria-expanded="false">
                <span class="visually-hidden">{{ 'Toggle ' ~ item.title ~ ' menu' }}</span>
                <span class="vertical-menu__chevron">{% include '@atoms/sprite/sprite.twig' with { name: 'fas-chevron-down' } only %}</span>
              </button>
              {% import _self as menus %}
              {{ menus.menu_links(item.below, menu_level + 1, id) }}
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  {% endapply %}
{% endmacro %}
{% import _self as menus %}

<nav class="vertical-menu" aria-label="{{ menu_name }}">
  {{ menus.menu_links(items, 1, menu_name|clean_unique_id, density, highlight_active_trail) }}
</nav>
