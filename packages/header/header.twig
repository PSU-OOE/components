<header class="header">
  <div class="header__content">
    <a href="/" class="header__branding">
      {% include '@molecules/sprite/sprite.twig' with { name: 'wc-mark' } only %}
      <span class="visually-hidden">Penn State World Campus</span>
    </a>
    <div class="header__small">
      <div class="header__utility">
        <div class="header__search">
          {% include '@molecules/drop-button/drop-button.twig' with {
            button_label: 'Search',
            links: [{url: '#', label: 'Dummy'}],
            align: 'right',
          } only %}
        </div>
        <div class="header__menu">
          {% include '@molecules/drop-button/drop-button.twig' with {
            button_label: 'Menu',
            links: [{url: '#', label: 'Dummy'}],
            align: 'right',
          } only %}
        </div>
      </div>
      <div class="header__cta">
        {% include '@atoms/cta/cta-group.twig' with {
          ctas: [how_to_apply, request_info],
          expand_to_fit: true,
        } only %}
      </div>
    </div>
    <div class="header__large">
      <div class="header__large-menu">
        <a href="#">Current Students</a>
        <a href="#">Alumni</a>
        <a href="#">Events</a>
        <a href="#">Search</a>
      </div>
      <div class="header__large-cta">
        {% include '@atoms/cta/cta-group.twig' with {
          ctas: [how_to_apply, request_info],
          expand_to_fit: true,
        } only %}
      </div>
    </div>
  </div>
</header>
