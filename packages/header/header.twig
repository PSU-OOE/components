{% set how_to_apply %}
  {% include '@atoms/cta/cta-block.twig' with {
    label: 'How to Apply',
    url: '#',
    color: 'light-blue',
  } only %}{% endset %}
{% set request_info %}
  {% include '@atoms/cta/cta-block.twig' with {
    label: 'Request Info',
    url: '#',
    color: 'reversed',
  } only %}
{% endset %}

{% set search_horizontal %}
  {% include '@blocks/compact-search/compact-search.twig' with {
    align: 'right',
    orientation: 'horizontal',
    search_form: 'The search form goes here.'
  } only %}
{% endset %}

{% set search_vertical %}
  {% include '@blocks/compact-search/compact-search.twig' with {
    align: 'right',
    search_form: 'The search form goes here.'
  } only %}
{% endset %}

{% set menu %}
  {% include '@blocks/compact-menu/compact-menu.twig' with {
    align: 'right',
    menu: 'The menu goes here.'
  } only %}
{% endset %}
<div class="header">
  <div class="header__gradient"></div>
  <div class="header__geometrics">
    <svg width="0" height="0" style="position:absolute">
      <defs>
        <linearGradient id="hub-geometric-header-gradient" x1=".182" x2=".174" y1=".579" y2=".706" gradientUnits="objectBoundingBox">
          <stop offset="0" stop-color="var(--sky-blue)"/>
          <stop offset="1" stop-color="var(--sky-blue)" stop-opacity="0"/>
        </linearGradient>
      </defs>
    </svg>
    {% include '@atoms/sprite/sprite.twig' with { name: 'hub-geometric' } only %}
    {% include '@atoms/sprite/sprite.twig' with { name: 'hub-geometric' } only %}
  </div>
  <header class="header__header">
    <div class="header__inner">
      <div class="header__dogear">
        <a class="header__branding" href="/">
          {% include '@molecules/sprite/sprite.twig' with { name: 'wc-mark' } only %}
          <span class="visually-hidden">Penn State World Campus</span>
        </a>
      </div>
      <div class="header__content header__content--minimal">
        <span class="header__tagline">A World of Possibilities. <strong>Online.</strong></span>
      </div>
    </div>
  </header>
</div>
