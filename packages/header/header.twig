<div class="header">
  <div class="header__gradient"></div>
  <div class="header__geometrics">
    <svg width="0" height="0" style="position:absolute">
      <defs>
        <linearGradient id="hub-geometric-header-gradient" x1=".182" x2=".174" y1=".579" y2=".706" gradientUnits="objectBoundingBox">
          <stop offset="0" stop-color="var(--sky-blue)"/>
          <stop offset="1" stop-color="var(--sky-blue)" stop-opacity="0"/>
        </linearGradient>
      </defs>
    </svg>
    {% include '@atoms/sprite/sprite.twig' with { name: 'hub-geometric' } only %}
    {% include '@atoms/sprite/sprite.twig' with { name: 'hub-geometric' } only %}
  </div>
  <header class="header__header">
    <div class="header__inner">
      <div class="header__dogear">
        <a class="header__branding" href="/">
          {% include '@molecules/sprite/sprite.twig' with { name: 'wc-mark' } only %}
          <span class="visually-hidden">Penn State World Campus</span>
        </a>
      </div>
      <div class="header__content">
        <div class="header__small">
          <div class="header__small-utility">
            <div class="header__search">
              {{ search_vertical }}
            </div>
            <div class="header__menu">
              {{ menu }}
            </div>
          </div>
        </div>
        <div class="header__large">
          <div class="header__large-utility">
            <nav class="header__large-utility-menu" aria-label="Popular links">
              <ul class="header__large-utility-links">
                <li class="header__large-utility-item"><a class="header__large-utility-link" href="#">Current Students</a></li>
                <li class="header__large-utility-item"><a class="header__large-utility-link" href="#">Alumni</a></li>
                <li class="header__large-utility-item"><a class="header__large-utility-link" href="#">Events</a></li>
              </ul>
            </nav>
            <div class="header__large-search">
              {{ search_horizontal }}
            </div>
          </div>
          <div class="header__large-cta">
            {% include '@atoms/cta/cta-group.twig' with {
              ctas: [how_to_apply, request_info],
              expand_to_fit: true,
            } only %}
          </div>
        </div>
      </div>
    </div>
    <div class="header__small-cta">
      {% include '@atoms/cta/cta-group.twig' with {
        ctas: [how_to_apply, request_info],
        expand_to_fit: true,
      } only %}
    </div>
  </header>
</div>

