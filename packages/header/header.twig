{%- set header_context = profile == 'inversed' ? 'light' : 'dark' -%}
{%- set dogear_context = profile == 'inversed' ? 'dark' : 'light' -%}
{%- set classes = [
  'header',
  profile in ['inversed'] ? 'header--' ~ profile,
]|filter(class => class is not empty) -%}
<header class="{{ classes|join(' ') }}" data-{{ header_context }}>
  <div class="header__geometrics">
    <svg width="0" height="0" style="position:absolute">
      <defs>
        <linearGradient id="hub-geometric-header-gradient" x1=".182" x2=".174" y1=".579" y2=".706" gradientUnits="objectBoundingBox">
          <stop offset="0" stop-color="var(--sky-blue)"/>
          <stop offset="1" stop-color="var(--sky-blue)" stop-opacity="0"/>
        </linearGradient>
      </defs>
    </svg>
    {% include '@psu-ooe/sprite/sprite.twig' with { name: 'hub-geometric' } only %}
    {% include '@psu-ooe/sprite/sprite.twig' with { name: 'hub-geometric' } only %}
  </div>
  <div class="header__inner">
    <div class="header__dogear" data-{{ dogear_context }}>
      {% block dogear_content %}
        {{ dogear_content }}
      {% endblock %}
    </div>
    <div class="header__content">
      {% block content %}
        {{ content }}
      {% endblock %}
    </div>
  </div>
  {% apply spaceless %}
    <div class="header__overflow">
      {% block overflow %}
        {{ overflow }}
      {% endblock %}
    </div>
  {% endapply %}
</header>
