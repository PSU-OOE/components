{% set classes = ['event-link'] %}
{% if featured %}
  {% set classes = classes|merge(['event-link--featured']) %}
{% endif %}
{% if compact %}
  {% set classes = classes|merge(['event-link--compact']) %}
{% endif %}
<a class="{{ classes|join(' ') }}" href="{{ url }}">
  <span class="event-link__first">
    <span class="event-link__date">
      {% include '@molecules/smart-datetime/smart-date.twig' with {
        start: start,
        end: end,
        timezone: timezone,
        compact: compact
      } only %}
    </span>
  </span>
  <span class="event-link__second">
    <span class="event-link__title">{{ title }}</span>
    {% if not hide_time %}
      <span class="event-link__time">
        {% include '@molecules/smart-datetime/smart-time.twig' with {
          start: start,
          end: end,
          timezone: timezone
        } only %}
      </span>
    {% endif %}
    {% if description %}
      <span class="event-link__description text text--size-small text--height-snug">
        {{ description }}
      </span>
    {% endif %}
  </span>
  <span class="event-link__third">
    {% include '@atoms/sprite/sprite.twig' with {
      name: 'fas-chevron-right'
    } only %}
  </span>
</a>
