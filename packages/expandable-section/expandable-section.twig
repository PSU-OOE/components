<div class="expandable-section" data-interactive-component{% if id %} id="{{ id }}"{% endif %}{% if toc_label %} data-toc-label="{{ toc_label }}"{% endif %}>
  {% if intro %}
    <div class="expandable-section__intro">
      {{ intro }}
    </div>
  {% endif %}
  {% include '@psu-ooe/button/button.twig' with {
    classes: ['expandable-section__expand', 'button--raised'],
    expand_to_fit: true,
    expanded: expanded,
    controls: id,
    label: expand_label,
    icon_after: 'fas-chevron-down',
  } only %}
  <div class="expandable-section__content"{% if not expanded %} style="height:0;overflow:hidden;"{% endif %}>
    {{ content }}
  </div>
  {% include '@psu-ooe/button/button.twig' with {
    classes: ['expandable-section__collapse', 'button--raised'],
    expand_to_fit: true,
    expanded: expanded,
    controls: id,
    label: collapse_label,
    icon_after: 'fas-chevron-up',
  } only %}
</div>
