<div class="expandable-section" {% if id %}id="{{ id }}" data-interactive-component{% endif %}>
  {% if intro %}
    <div class="expandable-section__intro">
      {{ intro }}
    </div>
  {% endif %}
  <button class="expandable-section__expand cta-block cta-block--expand cta-block--expand-to-fit" aria-expanded="false">
    {{ expand_label }}
    <span class="cta-block__icon cta-block__icon--after">
      {% include '@atoms/sprite/sprite.twig' with { name: 'fas-chevron-down' } only %}
    </span>
  </button>
  <div class="expandable-section__content" style="height:0;overflow:hidden;">
    {{ content }}
  </div>
  <button class="expandable-section__collapse cta-block cta-block--expand cta-block--expand-to-fit" aria-expanded="false">
    {{ collapse_label }}
    <span class="cta-block__icon cta-block__icon--after">
      {% include '@atoms/sprite/sprite.twig' with { name: 'fas-chevron-up' } only %}
    </span>
  </button>
</div>
