{% set link_classes = ['related-navigation-item__link'] %}
{% if link_color %}
  {% set link_classes = link_classes|merge(['related-navigation-item__link--' ~ link_color]) %}
{% endif %}
{% if active %}
  {% set link_classes = link_classes|merge(['active']) %}
{% endif %}
<li class="related-navigation-item">
  <a class="{{ link_classes|join(' ') }}" href="{{ url }}">
    <span class="related-navigation-item__title">{{ title }}</span>
    <span class="related-navigation-item__icon">{% include '@atoms/sprite/sprite.twig' with {
      name: 'fas-chevron-right'
      } only %}</span>
  </a>
</li>
