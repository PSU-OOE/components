{% set toggle_content %}
  {% set toggle_classes = [
    'more-menu__toggle',
    stacked ? 'more-menu__toggle--stacked',
  ]|filter(v => v is not empty) %}
  <div class="{{ toggle_classes|join(' ') }}">
    <div class="more-menu__toggle-sprite">
      {% if stacked %}
        {% include '@atoms/sprite/sprite.twig' with { name: 'fas-ellipsis' } only %}
      {% else %}
        {% include '@atoms/sprite/sprite.twig' with { name: 'fas-ellipsis-vertical' } only %}
      {% endif %}
    </div>
    <span class="more-menu__toggle-label">{{ more_label|default('More') }}</span>
  </div>
{% endset %}

{% set link_list %}
  <ul class="more-menu__list">
    {% for link in links %}
      <li class="more-menu__item">
        <a class="more-menu__link" href="{{ link.url }}">{{ link.label }}</a>
      </li>
    {% endfor %}
  </ul>
{% endset %}
<div class="more-menu">
  {% include '@molecules/drop-button/drop-button.twig' with {
    align: align,
    toggle_content: toggle_content,
    panel_content: link_list,
  } only %}
</div>
