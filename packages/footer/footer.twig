{% set top_first %}
  {% block top_first %}
    {{ top_first }}
  {% endblock %}
{% endset %}

{% set top_second %}
  {% block top_second %}
    {{ top_second }}
  {% endblock %}
{% endset %}

{% set top_third %}
  {% block top_third %}
    {{ top_third }}
  {% endblock %}
{% endset %}

{% set middle_first %}
  {% block middle_first %}
    {{ middle_first }}
  {% endblock %}
{% endset %}

{% set middle_second %}
  {% block middle_second %}
    {{ middle_second }}
  {% endblock %}
{% endset %}

{% set middle_third %}
  {% block middle_third %}
    {{ middle_third }}
  {% endblock %}
{% endset %}

{% set bottom %}
  {% block bottom %}
    {{ bottom }}
  {% endblock %}
{% endset %}

{% apply spaceless %}
  <footer class="footer">
    {% if top_first or top_second or top_third %}
      {% set footer_top %}
        <div class="footer__top">
          {% if top_first %}
            <div class="footer__top-first">
              {{ top_first }}
            </div>
          {% endif %}
          {% if top_second %}
            <div class="footer__top-second">
              {{ top_second }}
            </div>
          {% endif %}
          {% if top_third %}
            <div class="footer__top-third">
              {{ top_third }}
            </div>
          {% endif %}
        </div>
      {% endset %}
      {% include '@psu-ooe/background-container/background-container.twig' with {
        color: 'light-grey',
        background_image: 'hub-geometric:topleft',
        padding: 'large',
        content: footer_top
      } only %}
    {% endif %}
    {% if middle_first or middle_second or middle_third %}
      {% set footer_middle %}
        <div class="footer__middle">
          {% if middle_first %}
            <div class="footer__middle-first">
              {{ middle_first }}
            </div>
          {% endif %}
          {% if middle_second %}
            <div class="footer__middle-second">
              {{ middle_second }}
            </div>
          {% endif %}
          {% if middle_third %}
            <div class="footer__middle-third">
              {{ middle_third }}
            </div>
          {% endif %}
        </div>
        {% if bottom %}
          <div class="footer__bottom">
            {{ bottom }}
          </div>
        {% endif %}
      {% endset %}
      {% include '@psu-ooe/background-container/background-container.twig' with {
        color: bottom_color|default('beaver-blue'),
        background_image: 'hub-geometric:bottomright',
        padding: 'large',
        content: footer_middle
      } only %}
    {% endif %}
  </footer>
{% endapply %}
