<div class="event-spotlight">
  <div class="event-spotlight__container">
    <div class="event-spotlight__image">
      {% if images|length > 1 %}
        {% include '@psu-ooe/random-item/random-item.twig' with { items: images } only %}
      {% else %}
        {{ images[0] }}
      {% endif %}
    </div>
    <div class="event-spotlight__event">
      <{{ use_cta_button ? 'div' : 'a' }} class="event-spotlight__link"{% if not use_cta_button %} href="{{ url }}"{% endif %}>
        {% include '@psu-ooe/heading/heading.twig' with {
          reversed: true,
          size: 'medium',
          level: heading_level,
          content: title,
          vspace: 'none',
          classes: ['event-spotlight__title'],
        } only %}
        {% if start and end and timezone %}
          <div class="event-spotlight__datetime">
          <span class="event-spotlight__date">
            {% include '@psu-ooe/smart-datetime/smart-date.twig' with {
              start: start,
              end: end,
              timezone: timezone
            } only %}
          </span>
            <span class="event-spotlight__time">
            {% include '@psu-ooe/smart-datetime/smart-time.twig' with {
              start: start,
              end: end,
              timezone: timezone
            } only %}
          </span>
          </div>
        {% endif %}
        {% if cta_text %}
          <div class="event-spotlight__more">
            {% if use_cta_button %}
              {% include '@psu-ooe/cta/cta-block.twig' with {
                label: cta_text,
                url: '#',
                color: 'color-keystone',
              } only %}
            {% else %}
             {% include '@psu-ooe/read-more/read-more.twig' with {
                reverse: true,
                size: 'medium',
                title: cta_text
              } only %}
          {% endif %}
          </div>
        {% endif %}
      </{{ use_cta_button ? 'div' : 'a' }}>
      {% if all_events_url and all_events_text %}
        <div class="event-spotlight__all">
          {% include '@psu-ooe/read-more/read-more.twig' with {
            reverse: true,
            url: all_events_url,
            size: 'small',
            title: all_events_text
          } only %}
        </div>
      {% endif %}
    </div>
  </div>
</div>
