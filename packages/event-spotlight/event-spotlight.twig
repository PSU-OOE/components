<div class="event-spotlight">
  <div class="event-spotlight--image"></div>
  <div class="event-spotlight--content">
    <div class="event-spotlight--title"><h2>{{ title }}</h2></div>
    <div class="event-spotlight--date">{{ date }}</div>
    <div class="event-spotlight--read-more">
      <div style="background: #1e407c; padding-top: 1em; padding-bottom: 1em; padding-left: 1em;">
        {% include '@psu-ooe/read-more/read-more.twig' with {
          reverse: true,
          url: "https://www.google.com",
          title: "Event details",
          size: "medium"
        } only %}
      </div>
    </div>
  </div>
  <div class="event-spotlight--read-more-calendar">
    <div style="background: #1e407c; padding: 0.2rem 2rem 2rem;">
      {% include '@psu-ooe/read-more/read-more.twig' with {
        reverse: true,
        url: "https://www.google.com",
        title: "View all events",
        size: "small"
      } only %}
    </div>
  </div>
</div>
