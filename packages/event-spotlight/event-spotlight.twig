<div class="event-spotlight">
  <div class="event-spotlight__image">
    {{ image }}
    <div class="event-spotlight__image-overlay"></div>
  </div>
  <div class="event-spotlight__content" data-dark>
{# title, date, and read more/event details need to be the link to the event #}
    <div class="event-spotlight__title">{{ title }}</div>
    <div class="event-spotlight__date-time">
      <span class="event-spotlight__date">{{ date }}</span>
      <span class="event-spotlight__time">{{ time }}</span>
    </div>
    <div class="event-spotlight__read-more-links">
      <div class="event-spotlight__read-more-details">
        <div style="background: #1e407c; padding-top: 1em; padding-bottom: 1em; padding-left: 1em;">
          {% include '@psu-ooe/read-more/read-more.twig' with {
            reverse: true,
            url: "https://www.google.com",
            title: "Event details",
            size: "medium"
          } only %}
        </div>
      </div>
      <div class="event-spotlight__read-more-calendar">
        <div style="background: #1e407c; padding: 0.2rem 2rem 2rem;">
          {% include '@psu-ooe/read-more/read-more.twig' with {
            reverse: true,
            url: "https://www.google.com",
            title: "View all events",
            size: "small"
          } only %}
        </div>
      </div>
    </div>
  </div>
</div>
