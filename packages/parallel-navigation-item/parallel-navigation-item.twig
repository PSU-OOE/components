{% set link_classes = ['parallel-navigation-item__link'] %}
{% if link_color %}
  {% set link_classes = link_classes|merge(['parallel-navigation-item__link--' ~ link_color]) %}
{% endif %}
{% if active %}
  {% set link_classes = link_classes|merge(['active']) %}
{% endif %}
{% if variation %}
  {% set link_classes = link_classes|merge(['parallel-navigation-item__link--' ~ variation]) %}
{% endif %}
<span class="parallel-navigation-item">
  <a class="{{ link_classes|join(' ') }}" href="{{ url }}">
    <span class="parallel-navigation-item__title">
      {{ title }}
    </span>
    {% if icon %}
      <span class="parallel-navigation-item__icon">
        {% include '@atoms/sprite/sprite.twig' with {
          name: icon
        } only %}
      </span>
    {% endif %}
  </a>
</span>
