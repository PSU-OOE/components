        <linearGradient id="hub-geometric-page-title-banner-plain-gradient" x1="0.539" y1="0.24" x2="0.02" y2="0.066" gradientUnits="objectBoundingBox">
          <stop offset="0" stop-color="var(--sky-blue)"/>
          <stop offset="1" stop-color="var(--sky-blue)" stop-opacity="0"/>
        </linearGradient>
