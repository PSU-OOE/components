<div class="drop-button" data-interactive-component>
  <div role="button" class="drop-button__toggle" tabindex="0" aria-expanded="false">
    {{ toggle_content }}
  </div>
  {% set content_classes = [
    'drop-button__content',
    panel_width in ['wide'] ? 'drop-button__content--' ~ panel_width,
    panel_padding in ['none', 'small'] ? 'drop-button__content--padding-' ~ panel_padding,
  ]|filter(v => v is not empty) %}
  <div class="{{ content_classes|join(' ') }}" tabindex="0">
    {{ panel_content }}
  </div>
</div>
