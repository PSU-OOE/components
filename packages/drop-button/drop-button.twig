{% set classes = [
  'drop-button',
  width in ['wide'] ? 'drop-button--' ~ width,
]|filter(v => v is not empty) %}
<div class="{{ classes|join(' ') }}" data-interactive-component>
  <div role="button" class="drop-button__toggle" tabindex="0" aria-expanded="false">
    {{ toggle_content }}
  </div>
  {% set content_classes = [
    'drop-button__content',
    'drop-button__content--padding-' ~ (panel_padding in ['none'] ? panel_padding : 'default'),
  ] %}
  <div class="{{ content_classes|join(' ') }}" tabindex="0">
    {{ panel_content }}
  </div>
</div>
