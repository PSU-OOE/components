{% set classes = [
  'drop-button',
  width in ['wide'] ? 'drop-button--' ~ width,
]|filter(v => v is not empty) %}
<div class="{{ classes|join(' ') }}" data-interactive-component>
  <div role="button" class="drop-button__toggle" tabindex="0" aria-expanded="false">
    {{ toggle_content }}
  </div>
  <div class="drop-button__content" tabindex="0">
    {{ panel_content }}
  </div>
</div>
