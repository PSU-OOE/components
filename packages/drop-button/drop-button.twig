{% set classes = ['drop-button'] %}
{% if short %}
    {% set classes = classes|merge(['drop-button--short']) %}
{% endif %}
{% if alignment %}
    {% set classes = classes|merge(['drop-button--' ~ alignment]) %}
{% endif %}
<div class="{{ classes|join(' ' ) }}">
    <button class="drop-button__toggle" aria-expanded="false">
    <span class="drop-button__sprite">
      {% include '@atoms/sprite/sprite.twig' with { name: short ? 'ellipsis-h' : 'ellipsis-v' } only %}
    </span>
        <span class="drop-button__label">{{ button_label }}</span>
    </button>
    <ul class="drop-button__list">
        {% for item in items %}
            <li class="drop-button__item">
                {{ item }}
            </li>
        {% endfor %}
    </ul>
</div>
