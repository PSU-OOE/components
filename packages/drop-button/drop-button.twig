{% set classes = ['drop-button'] %}
{% if full_width %}
    {%  set classes = classes|merge(['drop-button--full-width']) %}
{% endif %}
{% if align %}
    {% set classes = classes|merge(['drop-button--align-' ~ align]) %}
{% endif %}
<div class="{{ classes|join(' ' ) }}">
    <div role="button" class="drop-button__toggle" tabindex="0" aria-expanded="false">
      {{ toggle_content }}
    </div>
    <div class="drop-button__content" tabindex="0">
      {{ panel_content }}
    </div>
</div>
