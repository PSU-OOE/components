{% set element = semantic ? 'address' : 'div' %}
{% apply spaceless %}
  <{{ element }} class="physical-address">
    {% if name %}
      <div class="physical-address__name">
        {{- name -}}
      </div>
    {% endif %}
    {% if street %}
      <div class="physical-address__line1">
        {{- street -}}
      </div>
    {% endif %}
    {% if locality or state or postcode %}
      <div class="physical-address__line2">
        {% if locality %}
          <span class="physical-address__locality">
            {{- locality -}}{% if state or postcode %},{% endif %}
          </span>
        {% endif %}
        {% if state %}
          <span class="physical-address__state">{{- state -}}{% if postcode %} {% endif %}</span>
        {% endif %}
        {% if postcode %}
          <span class="physical-address_postcode">{{- postcode -}}</span>
        {% endif %}
      </div>
    {% endif %}
  </{{ element }}>
{% endapply %}
