{% set classes = ['read-more'] %}

{% if reverse %}
  {% set classes = classes|merge(['read-more--reverse']) %}
{% endif %}

{% if size == 'small' %}
  {% set classes = classes|merge(['read-more--small']) %}
{% endif %}

{% apply spaceless %}
<a class="{{ classes|join(' ') }}" href="{{ url }}">
  <span class="read-more__text">{{ title }}</span>
  <span class="read-more__chevron">{% include '@atoms/sprite/sprite.twig' with { name: "fas-chevron-right" } %}</span>
  </a>
{% endapply %}
