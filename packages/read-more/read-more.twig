{% set classes = ['read-more'] %}

{% if reverse %}
  {% set classes = classes|merge(['read-more--reverse']) %}
{% endif %}

{% if size == 'small' %}
  {% set classes = classes|merge(['read-more--small']) %}
{% endif %}

{% if not url %}
  {% set classes = classes|merge(['link--default']) %}
{% endif %}
{% apply spaceless %}
  {% set read_more_content %}
    <span class="read-more__text">{{ title }}</span>
    <span class="read-more__chevron">{% include '@psu-ooe/sprite/sprite.twig' with { name: "fas-chevron-right" } %}</span>
  {% endset %}
  {% if url %}
    <a class="{{ classes|join(' ') }}" href="{{ url }}">{{ read_more_content }}</a>
  {% else %}
    <span class="{{ classes|join(' ') }}">{{ read_more_content }}</span>
  {% endif %}
{% endapply %}
