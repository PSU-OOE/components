{% set column_map = {
  2: 'icon-list--two-col',
  3: 'icon-list--three-col',
} %}

{% set classes = [
  'icon-list',
  columns in column_map|keys ? column_map[columns],
] %}
{% set element_type = ordered ? 'ol' : 'ul' %}
<{{ element_type }} class="{{ classes|join(' ') }}" role="list">
  {% for item in items %}
    <li class="icon-list__item">
      <div class="icon-list__content">
        <div class="icon-list__icon">{% include '@atoms/sprite/sprite.twig' with { name: item.icon ?: 'fa-check-circle' } only %}</div>
        <div class="icon-list__text">{{ item.content }}</div>
      </div>
    </li>
  {% endfor %}
</{{ element_type }}>
