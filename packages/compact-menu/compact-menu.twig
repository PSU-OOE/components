{% set toggle_content %}
  <div class="compact-menu__toggle">
    <div class="compact-menu__toggle-sprite">
      {% include '@psu-ooe/sprite/sprite.twig' with { name: 'fa-bars' } only %}
    </div>
    <span class="compact-menu__toggle-label">{{ menu_label|default('Menu') }}</span>
  </div>
{% endset %}

{% set panel_content %}
  <div class="compact-menu__content">
    {% block panel_content %}
        {{ menu }}
    {% endblock %}
  </div>
{% endset %}

<div class="compact-menu">
  {% include '@psu-ooe/drop-button/drop-button.twig' with {
    toggle_content: toggle_content,
    panel_content: panel_content,
    panel_width: 'wide',
    panel_padding: 'none',
  } only %}
</div>
