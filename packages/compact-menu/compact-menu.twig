{% set toggle_content %}
  <div class="compact-menu__toggle">
    <div class="compact-menu__toggle-sprite">
      {% include '@atoms/sprite/sprite.twig' with { name: 'fa-bars' } only %}
    </div>
    <span class="compact-menu__toggle-label">{{ search_label|default('Menu') }}</span>
  </div>
{% endset %}

<div class="compact-menu">
  {% include '@molecules/drop-button/drop-button.twig' with {
    align: align,
    toggle_content: toggle_content,
    panel_content: menu,
  } only %}
</div>
