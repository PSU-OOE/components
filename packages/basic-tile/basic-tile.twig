<a class="basic-tile {% if background_color %}basic-tile--{{ background_color }}{% endif %}" href="{{ url }}"
  {% if tracking_description and tracking_placement %}
    data-cta-track-{{ tracking_synchronous ? 'sync' : 'async' }}
    data-cta-description="{{ tracking_description }}"
    data-cta-placement="{{ tracking_placement }}"
  {% endif %}
>
  {% if primary_label %}
    <span class="basic-tile__primary-label text--weight-bold">{{ primary_label }}</span>
  {% endif %}
  {% if secondary_label %}
    <span class="basic-tile__secondary-label">{{ secondary_label }}</span>
  {% endif %}
</a>
