{% set first %}
  {% block first %}
    {{ first }}
  {% endblock %}
{% endset %}

{% set second %}
  {% block second %}
    {{ second }}
  {% endblock %}
{% endset %}

{% set third %}
  {% block third %}
    {{ third }}
  {% endblock %}
{% endset %}

{% set fourth %}
  {% block fourth %}
    {{ fourth }}
  {% endblock %}
{% endset %}

{% include '@psu-ooe/layout-multi-col/layout-multi-col.twig' with {
  regions: [
    { weight: first_width|default(25), content: first },
    { weight: second_width|default(25), content: second },
    { weight: third_width|default(25), content: third },
    { weight: fourth_width|default(25), content: fourth },
  ]|filter((region) => region.content is not empty)
} only %}
