{% set first -%}
  {% block first %}
    {{- first -}}
  {% endblock %}
{% endset %}

{% set second -%}
  {% block second %}
    {{- second -}}
  {% endblock %}
{% endset %}

{% set third -%}
  {% block third %}
    {{- third -}}
  {% endblock %}
{% endset %}

{% include '@psu-ooe/layout-multi-col/layout-multi-col.twig' with {
  classes: ['layout-three-col'],
  gap: gap,
  regions: [
    { weight: first_width|default(33), content: first },
    { weight: second_width|default(33), content: second },
    { weight: third_width|default(33), content: third },
  ]|filter((region) => region.content is not empty)
} only %}
