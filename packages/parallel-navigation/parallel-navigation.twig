{% if heading and items is not empty %}
  {% set column_classes = {
    2: 'parallel-navigation__list--two-col'
  } %}

  <nav class="parallel-navigation" aria-labelledby="parallel-navigation-{{ id }}-label">
    {% if heading or intro_text %}
      <div class="parallel-navigation__intro">
        {% set heading_classes = ['parallel-navigation__heading', 'heading'] %}
        {% if heading_size %}
          {% set heading_classes = heading_classes|merge(['heading--'~heading_size]) %}
        {% endif %}
        {% if heading_color %}
          {% set heading_classes = heading_classes|merge(['heading--'~heading_color]) %}
        {% endif %}
        <{{ heading_level }} class="{{ heading_classes|join(' ') }}" id="parallel-navigation-{{ id }}-label">{{ heading }}</{{ heading_level }}>
        {% if intro_text %}
          <p class="parallel-navigation__text">{{ intro_text }}</p>
        {% endif %}
      </div>
    {% endif %}
    <ul class="parallel-navigation__list{% if column_classes[columns] is defined %} {{ column_classes[columns] }}{% endif %}">
      {% for item in items %}
      <li class="parallel-navigation__item">
        {{ item }}
      </li>
      {% endfor %}
    </ul>
  </nav>
{% endif %}
