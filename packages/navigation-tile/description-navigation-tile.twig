<div class="description-navigation-tile">
  <a class="description-navigation-tile__link" href="{{ link.url }}"><span class="visually-hidden">{{ link.label }}</span></a>
  <div class="description-navigation-tile__content">
    <div class="description-navigation-tile__title" aria-hidden="true">
      <span>{{ link.label }}</span>
    </div>
    <div class="description-navigation-tile__description">{{ description }}</div>
  </div>
  {% if read_more %}
    <div class="description-navigation-tile__read-more" aria-hidden="true">
      <span>
         {% include '@atoms/read-more/read-more.twig' with {
           "url": link.url,
           "title": read_more_label,
         } only %}
      </span>
    </div>
  {% endif %}
</div>